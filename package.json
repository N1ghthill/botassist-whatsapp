{
  "name": "botassist-whatsapp",
  "version": "4.1.11",
  "description": "BotAssist - Assistente WhatsApp IA com Interface Gr√°fica",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "bash scripts/build-linux.sh",
    "build:linux:appimage": "electron-builder --linux AppImage --publish never",
    "build:linux:rpm": "bash scripts/build-rpm.sh",
    "build:linux:dir": "electron-builder --linux AppImage deb --dir --publish never",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json,md}\"",
    "test": "node scripts/test.js",
    "reset": "node scripts/maintenance.js reset",
    "backup": "node scripts/maintenance.js backup",
    "clean": "node scripts/maintenance.js clean && npm i"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "dotenv": "^16.6.1",
    "electron-updater": "^6.6.2",
    "groq-sdk": "^0.7.0",
    "imap": "^0.8.19",
    "keytar": "^7.9.0",
    "mailparser": "^3.9.3",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@eslint/js": "^9.20.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.2"
  },
  "author": "Irving Ruas <irving@ruas.dev.br>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/N1ghthill/botassist-whatsapp.git"
  },
  "build": {
    "appId": "br.dev.ruas.botassist",
    "productName": "BotAssist WhatsApp",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "electronDist": "node_modules/electron/dist",
    "files": [
      "**/*",
      "!dist/**",
      "!backups/**",
      "!.git/**",
      "!.github/**",
      "!docs/**",
      "!scripts/**",
      "!README.md",
      "!CONTRIBUTING.md",
      "!CODE_OF_CONDUCT.md",
      "!SECURITY.md",
      "!**/.env",
      "!**/.env.*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "N1ghthill",
        "repo": "botassist-whatsapp"
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": "dmg"
    },
    "linux": {
      "category": "Utility",
      "icon": "assets/icons",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
